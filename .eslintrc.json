{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "impliedStrict": false
        },
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": "off",
        "block-scoped-var": "error",
        "no-undef": "error",
        "indent": ["warn", 4],
        "require-jsdoc": "off",
        "max-len": "off",
        "react/prop-types": 0,
        "comma-dangle": "off",
        "no-unused-vars": "warn",
        "object-curly-spacing": "off",
        "quotes": [2, "single", "avoid-escape"],
        "eol-last": "off",
        "space-before-function-paren": "off",
        "padded-blocks": "off",
        "global-require": "off",
        "react/react-in-jsx-scope": "off",
        "react/no-unescaped-entities": "off"
    }
}
